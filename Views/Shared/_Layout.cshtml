<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoeWebshop</title>

    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />


    <style>
        body {
            background-image: url('/backCity.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;

        }
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;         
            padding: 10px;
            text-align: center;
        }

        .btn-outline-success:hover {
            transform: scale(1.16); }

        .btn-outline-secondary:hover {
            transform: scale(1.16); 
        }
    </style>
</head>




<body>
   
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="btn btn-lg btn-outline-success me-2" asp-area="" asp-controller="Home" asp-action="Index">ShoeWebshop</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav">
                        <li class="nav-item mt-2 m-lg-2 ">
                            <a class="btn btn-outline-secondary btn-shadow" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mt-2 m-lg-2 " @* style="margin-bottom: 50px;" *@>
                            <a class="btn btn-outline-secondary btn-shadow" asp-area="" asp-controller="Home" asp-action="Mens">Men's shoes</a>
                        </li>
                        <li class="nav-item mt-2 m-lg-2 " @* style="margin-bottom: 50px;" *@>
                            <a class="btn btn-outline-secondary btn-shadow" asp-area="" asp-controller="Home" asp-action="Womens">Women's shoes</a>
                        </li>
                        <partial name="_RolesPartial" />
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ShoeWebshop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  @*   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

